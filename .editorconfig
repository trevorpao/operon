# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
draw_white_space = all
trim_trailing_white_space_on_save = true

[*.md]
trim_trailing_whitespace = false
trim_trailing_white_space_on_save = false

[*.html]
indent_size = 4

[*.css]
max_line_length = 80

[{package,bower}.json]
indent_size = 2
